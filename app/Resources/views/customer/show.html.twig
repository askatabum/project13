{% extends 'baseadmin.html.twig' %}

{% block body %}
    <h1>Customer</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ customer.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ customer.name }}</td>
            </tr>
            <tr>
                <th>Company</th>
                <td>{{ customer.company }}</td>
            </tr>
            <tr>
                <th>Street</th>
                <td>{{ customer.street }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ customer.city }}</td>
            </tr>
            <tr>
                <th>Zipcode</th>
                <td>{{ customer.zipcode }}</td>
            </tr>
            <tr>
                <th>Postoffice</th>
                <td>{{ customer.postoffice }}</td>
            </tr>
            <tr>
                <th>Province</th>
                <td>{{ customer.province }}</td>
            </tr>
            <tr>
                <th>Nip</th>
                <td>{{ customer.nip }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ customer.email }}</td>
            </tr>
            <tr>
                <th>Phone1</th>
                <td>{{ customer.phone1 }}</td>
            </tr>
            <tr>
                <th>Phone2</th>
                <td>{{ customer.phone2 }}</td>
            </tr>
        </tbody>
    </table>

    
        
         <div class="box-footer">
              <a href="{{ path('customer_index') }}" class="btn btn-default">Wróć do listy</a>
     
            <a href="{{ path('customer_edit', { 'id': customer.id }) }}" class="btn btn-default">Edytuj</a>
   
            {{ form_start(delete_form) }}
                <input type="submit" value="Usuń" class="btn btn-danger pull-right">
            {{ form_end(delete_form) }}             
              </div>
{% endblock %}
